    "version": "0.2.0",
    "configurations": [
        {
            "command": "npm run ts:node",
            "name": "ts:node",
            "request": "launch",
            "type": "node-terminal", 
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Ts Node",
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "internalConsoleOptions": "openOnFirstSessionStart",
            "args": [
                "${workspaceFolder}/Example/example.ts"
            ], 
            "env": {
                "TS_NODE_PROJECT": "tsconfig.json"
            }
        }, 
        
    ]
}